#include <stdio.h>  

void Dfs(int n, int a[10][10], int source, int s[10]) {  
    printf("%d\t", source + 1);  
    s[source] = 1; 
    for(int i = 0; i < n; i++) {
        if(a[source][i] == 1 && !s[i])  
            Dfs(n, a, i, s);
    }
}

int main() {
    int n, a[10][10], s[10] = {0}, source;
    printf("Enter number of nodes: ");
    scanf("%d", &n);
    printf("Enter the adjacency matrix:\n");
    for(int i = 0; i < n; i++)
        for(int j = 0; j < n; j++)
            scanf("%d", &a[i][j]);
    printf("Enter the source node: ");
    scanf("%d", &source);
    Dfs(n, a, source - 1, s);  
    return 0;
}
